<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>
  <header class="header">
    <h1>{{title}}</h1>

    <nav>
      {{#if user}}
        <span>Bienvenido, {{user.first_name}}</span>
        <a href="/logout" class="btn">Cerrar SesiÃ³n</a>
      {{else}}
        <a href="/login" class="btn">Iniciar SesiÃ³n</a>
        <a href="/register" class="btn">Registrarse</a>
      {{/if}}
      {{#if user}}
        <a href="/cart" class="btn">ðŸ›’ Ver Carrito</a>
      {{/if}}
    </nav>
  </header>

  <main class="product-list">
    {{#if products.length}}
      {{#each products}}
        <div class="product-card">
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <p><strong>${{this.price}}</strong></p>
          <p>Stock: {{this.stock}}</p>

          {{#if ../user}}
            {{#if (eq ../user.role "user")}}
              <form action="/api/carts/{{../user.cart._id}}/add/{{this._id}}" method="POST">
                <input type="number" name="quantity" value="1" min="1">
                <button type="submit">Agregar al Carrito</button>
              </form>
            {{/if}}
            {{#if (eq ../user.role "admin")}}
              <a href="/api/products/view" class="btn admin">Administrar Productos</a>
            {{/if}}
          {{/if}}
        </div>
      {{/each}}
    {{else}}
      <p>No hay productos disponibles.</p>
    {{/if}}
  </main>
</body>
</html>
