<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/cart.css">
</head>
<body>
  <div class="cart-container">
    <h1>Mi Carrito</h1>

    {{#if cart.products.length}}
      <ul class="product-list">
        {{#each cart.products}}
          <li class="product-item">
            <div>
              <p><strong>Producto:</strong> {{this.product.title}}</p>
              <p><strong>Cantidad:</strong> {{this.quantity}}</p>
              <p><strong>Precio Unitario:</strong> ${{this.product.price}}</p>
              <p><strong>Total:</strong> ${{multiply this.product.price this.quantity}}</p>
            </div>
            <form action="/api/carts/{{../cart._id}}/delete/{{this.product._id}}" method="POST">
              <button type="submit" class="btn-delete">Eliminar</button>
            </form>
          </li>
        {{/each}}
      </ul>

      <p class="total"><strong>Total a Pagar:</strong> ${{cart.total}}</p>

      <form action="/api/carts/{{cart._id}}/purchase" method="POST">
        <button type="submit" class="btn-purchase">Finalizar Compra</button>
      </form>
    {{else}}
      <p class="empty">Tu carrito está vacío.</p>
    {{/if}}

    <div class="cart-footer">
      <a href="/" class="btn-back">Seguir Comprando</a>
      <a href="/logout" class="btn-logout">Cerrar Sesión</a>
    </div>
  </div>
</body>
</html>
