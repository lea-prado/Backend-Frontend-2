<h1>Mi Carrito</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <p><strong>Producto:</strong> {{this.product.title}}</p>
        <p><strong>Cantidad:</strong> {{this.quantity}}</p>
        <p><strong>Precio Unitario:</strong> ${{this.product.price}}</p>
        <p><strong>Total:</strong> ${{multiply this.product.price this.quantity}}</p>
      </li>
    {{/each}}
  </ul>
  <p><strong>Total a Pagar:</strong> ${{cart.total}}</p>
  <form action="/api/carts/{{cart._id}}/purchase" method="POST">
    <button type="submit">Finalizar Compra</button>
  </form>
{{else}}
  <p>Tu carrito está vacío.</p>
{{/if}}

<p><a href="/api/products/view">Seguir Comprando</a></p>
